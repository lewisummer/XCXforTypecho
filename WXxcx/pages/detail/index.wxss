/**基础风格样式**/
@import '/towxml/style/main.wxss';


/**如果页面有动态主题切换，则需要将使用到的样式全部引入**/

/**主题配色（浅色样式）**/
@import '/towxml/style/theme/light.wxss';

/**主题配色（深色样式）**/
@import '/towxml/style/theme/dark.wxss';

.floating {
	width: 90rpx;
	height: 90rpx;
	display: flex;
	position: fixed;
	left: 30rpx;
	bottom: 30rpx;
	justify-content: center;
	align-items: center;
}

.floating image {
	width: 50rpx;
	height: 50rpx;
}
.comment {
	margin:30rpx;
	border-top: 5rpx solid;
}

.comment-title {
	margin:20rpx;
	font-size: 70rpx;
}
.comment-body {
	padding: 10rpx;
	margin-left: 15rpx;
	background-color: ghostwhite;
}

.comment-name {
	padding-bottom:10rpx;
	border-bottom: 1rpx gainsboro dashed;
	font-weight: 700;
	font-size: 30rpx;
	color: #000;
}

.comment-content {
	padding:10rpx;
	border-bottom: 1rpx gainsboro dashed;
	font-size: 30rpx;
	color: #000;
}

.comment-time {
	padding-top:10rpx;
	margin-bottom: 10rpx;
	font-size: 30rpx;
	color: gray;
	text-align: right;
}